[flake8]
max-line-length = 88
extend-ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by autoflake if needed)
    F841,  # local variable assigned but never used
exclude =
    migrations/,
    __pycache__/,
    .venv/,
    .git/,
    build/,
    dist/
